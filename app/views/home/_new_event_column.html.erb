<div ng-controller='eventsController as eventsCtrl'>
  <div class="col-xs-12 col-md-6 new-event seccion at-view-slide-in-left at-view-slide-out-left">
    <h1>Titulo del nuevo evento</h1>

    <div class="info">
      <div>
        <form name='newEvent' ng-submit='eventsCtrl.addEvent()' ng-hide='eventsCtrl.editMode'>
          <label>Title:</label>
          <input ng-model='eventsCtrl.event.title' required>
          <br>
          <label>Description:</label>
          <textarea ng-model='eventsCtrl.event.description' required></textarea>
          <div>Direcci√≥n:</div>
          <input id='geocomplete' required/></input>
          <input type='hidden' ng-model="eventsCtrl.event.direction" id='direction' required/></input>
          <input type='hidden' ng-model="eventsCtrl.event.lat" id='lat' required/></input>
          <input type='hidden' ng-model="eventsCtrl.event.lng" id='lng' required/></input>
          <br>
          <input type='submit' value='Create Event' />
        </form>
      </div>
    </div>
  </div>
</div>
